<h1><%= current_user.name %>のタスク一覧</h1>

  <table class="table table-striped">
    <thead>
      <tr>
        <th>id</th>
        <th>タスク</th>
        <th>進捗</th>
      </tr>
    </thead>
    
    <% if @tasks.any? %>
    <tbody>
      <% @tasks.each do |task| %>
        <tr>
          <td><%= link_to task.id, task %></td>
          <td><%= task.content %></td>
          <td><%= task.status %></td>
        </tr>
      <% end %>
    </tbody>
    <% end %>
  </table>
  

 <div>
<%= paginate @tasks %>
</div>

<%= link_to '新規タスクの登録', new_task_path,class: "btn btn-primary" %>

